{
    "name": "blog-api-functions-ts",
    "version": "1.0.0",
    "description": "IT Blog API implemented with Azure Functions and TypeScript with PostgreSQL storage",
    "scripts": {
      "build": "tsc",
      "watch": "tsc -w",
      "start": "func start",
      "test": "jest",
      "migrate": "tsc && node dist/db/migrations/run.js",
      "seed": "tsc && node dist/db/seed.js",
      "reset-db": "tsc && node dist/db/reset-db.js"
    },
    "dependencies": {
      "@azure/functions": "^3.5.1",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "pg": "^8.11.3",
      "pg-format": "^1.0.4"
    },
    "devDependencies": {
      "@types/cors": "^2.8.17",
      "@types/jest": "^29.5.11",
      "@types/node": "^20.10.5",
      "@types/pg": "^8.10.9",
      "@types/pg-format": "^1.0.5",
      "azure-functions-core-tools": "^4.0.5198",
      "jest": "^29.7.0",
      "ts-jest": "^29.1.1",
      "typescript": "^5.3.3"
    }
  }