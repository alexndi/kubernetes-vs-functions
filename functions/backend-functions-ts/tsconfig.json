{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "types": ["node", "jest", "@azure/functions"]
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "**/__tests__/**",
      "coverage"
    ]
  }